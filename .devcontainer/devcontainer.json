{
    "name": "Unit Converter",
    "dockerFile": "Dockerfile",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      },
        "settings": {
          "python.defaultInterpreterPath": "/usr/local/bin/python"
        }
      }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "root"
  }
  